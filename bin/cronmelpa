#!/bin/bash

MELPADIR=$HOME/melpa
WEBROOT=$HOME/webapps/melpa


PATH=$HOME/.cabal/bin:$HOME/usr/bin:$HOME/bin:$PATH

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

env > $HOME/logs/user/melpaenv.log

## git pull
cd ${MELPADIR}
git pull origin master

## run the script
${MELPADIR}/melpa 2>&1

## sync to the website
rsync -avz --delete ${MELPADIR}/packages ${MELPADIR}/html/* ${WEBROOT}/
